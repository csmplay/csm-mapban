:80 {
    @api path /api/*
    reverse_proxy @api backend:4000 {
        header_up Host {host}
    }

    @socket path /socket.io/*
    reverse_proxy @socket backend:4000 {
        header_up Host {host}
    }

    @frontend path /*
    reverse_proxy @frontend frontend:3000 {
        header_up Host {host}
    }
}